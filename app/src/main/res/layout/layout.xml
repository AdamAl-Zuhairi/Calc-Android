<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray">

    <!-- Display Field -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="end"
        android:textSize="24sp"
        android:padding="10dp"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginBottom="16dp" />

    <!-- Buttons for Numbers and Operators -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_marginBottom="16dp">

        <!-- Row 1: Numbers and Divide -->
        <Button
            android:id="@+id/button7"
            android:text="7"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button8"
            android:text="8"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button9"
            android:text="9"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/divideButton"
            android:text="/"
            style="@style/ButtonOperatorStyle" />

        <!-- Row 2: Numbers and Multiply -->
        <Button
            android:id="@+id/button4"
            android:text="4"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button5"
            android:text="5"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button6"
            android:text="6"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/multiplyButton"
            android:text="*"
            style="@style/ButtonOperatorStyle" />

        <!-- Row 3: Numbers and Subtract -->
        <Button
            android:id="@+id/button1"
            android:text="1"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button2"
            android:text="2"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button3"
            android:text="3"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/subtractButton"
            android:text="-"
            style="@style/ButtonOperatorStyle" />

        <!-- Row 4: Decimal, 0, Add, Equal -->
        <Button
            android:id="@+id/decimalButton"
            android:text="."
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/button0"
            android:text="0"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/addButton"
            android:text="+"
            style="@style/ButtonOperatorStyle" />
        <Button
            android:id="@+id/equalButton"
            android:text="="
            style="@style/ButtonEqualStyle" />

    </GridLayout>

    <!-- Extra Function Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/piButton"
            android:text="PI"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/eButton"
            android:textAllCaps="false"
            android:text="e"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/sqrtButton"
            android:text="âˆš"
            style="@style/ButtonOperatorStyle" />
        <Button
            android:id="@+id/powButton"
            android:text="^"
            style="@style/ButtonOperatorStyle" />

        <Button
            android:id="@+id/logButton"
            android:text="log"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/lnButton"
            android:text="ln"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/sinButton"
            android:text="sin"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/cosButton"
            android:text="cos"
            style="@style/ButtonStyle" />

    </GridLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/clearButton"
            android:layout_weight="1"
            android:text="C"
            style="@style/ButtonClearStyle" />
        <Button
            android:id="@+id/exitButton"
            android:layout_weight="1"
            android:text="Exit"
            style="@style/ButtonExitStyle" />

    </LinearLayout>
</LinearLayout>

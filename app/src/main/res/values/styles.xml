<resources>
    <!-- Standard Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Operator Button Style -->
    <style name="ButtonOperatorStyle" parent="ButtonStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Equal Button Style -->
    <style name="ButtonEqualStyle" parent="ButtonStyle">
        <item name="android:background">@color/green</item>
    </style>

    <!-- Clear Button Style -->
    <style name="ButtonClearStyle" parent="ButtonStyle">
        <item name="android:background">@color/orange</item>
    </style>

    <!-- Exit Button Style -->
    <style name="ButtonExitStyle" parent="ButtonStyle">
        <item name="android:background">@color/red</item>
    </style>
</resources>
